        },
        {
          "name": "Get Party Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/parties/:partyId",
              "host": ["{{baseUrl}}"],
              "path": ["parties", ":partyId"],
              "variable": [
                {
                  "key": "partyId",
                  "value": "your-party-uuid-here"
                }
              ]
            }
          }
        },
