              "variable": [
                {
                  "key": "partyId",
                  "value": "your-party-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Draw Names",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
